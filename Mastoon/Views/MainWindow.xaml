<Window x:Class="Mastoon.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mastoon.Views"
        xmlns:Prism="http://prismlibrary.com/"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="700"
        Width="800" d:DataContext="{d:DesignData }">
    <Window.InputBindings>
        <KeyBinding Modifiers="Control"
                    Key="O"
                    Command="{Binding CustomCommand}" />
    </Window.InputBindings>
    <i:Interaction.Triggers>
        <Prism:InteractionRequestTrigger SourceObject="{Binding PostRequest}">
            <Prism:PopupWindowAction />
        </Prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Text" />
            </StatusBarItem>
        </StatusBar>

        <Grid DockPanel.Dock="Bottom"
              Width="auto"
              Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding Input, Mode=TwoWay}" />
            <Button Grid.Column="1"
                    Content="投稿"
                    Command="{Binding PostStatusCommand}" />
        </Grid>

        <DataGrid DockPanel.Dock="Top"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Statuses}"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  Height="auto"
                  Width="auto"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  IsReadOnly="True"
                  CanUserSortColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  Background="#002b36"
                  BorderBrush="#002b36"
                  RowBackground="#073642"
                  Foreground="#839496"
                  VerticalGridLinesBrush="#002b36"
                  HorizontalGridLinesBrush="#002b36">
            <DataGrid.Columns>
                <DataGridTextColumn Header="" />
                <DataGridTextColumn Header="名前"
                                    Binding="{Binding Account.DisplayName}" />
                <DataGridTextColumn Header="投稿"
                                    Width="300"
                                    Binding="{Binding Content}" />
                <DataGridTextColumn Header="日時"
                                    Binding="{Binding CreatedAt, StringFormat=yyyy/MM/dd HH:mm:ss}" />
                <DataGridTextColumn Header="ユーザー名"
                                    Binding="{Binding Account.UserName}" />
                <DataGridTextColumn Header="発信元"
                                    Binding="{Binding Application.Name}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>